<div id="body">
    <section>
        <h1>Feature Detection demo</h1>
        <h3>
            Detect feature support for the Performance object of the hasFeature() method call.
        </h3>
    </section>
    <br />
    <section class="featured">
        <div id="result1"></div>
    </section>
</div>




@section scripts{
    <script>
        $(function () {
            var $rC = $("#result");
            // check for performance support
            if (window.performance) {
                // show page load time since most recent navigation
                var currentTime = new Date().getTime();
                var loadTime = currentTime - performance.timing.navigationStart;
                $rC.html("User-perceived page load time: " + loadTime / 1000 + " seconds");
            } else {
                $rC.html("Sorry, this browser does not supprt web performance API");
            }
        });
    </script>
    <script>
        $(function () {
            var $rC = $("#result1");
            var feature = "SVG";
            var version = "1.1";
            var featureFlag;
            if (document.implementation) {
                // check for SVG support
                featureFlag = document.implementation.hasFeature(feature, version);
                // report on support status
                $rC.html(feature + " " + version + " supported: " + featureFlag);
            }
            else {
                $rC.html("Sorry, DOMImplementation not supported for this browser");
            }
        })
    </script>
}



